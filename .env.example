# Smart Attendance System - Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secure-secret-key-here

# Database Configuration (optional - defaults to SQLite)
# DATABASE_URL=sqlite:///attendance.db
# DATABASE_URL=postgresql://user:password@localhost/attendance

# Flask Environment
FLASK_ENV=development
# Set to 'production' in production environment

# Face Recognition Settings (optional)
# FACE_RECOGNITION_TOLERANCE=0.6
# FACE_DETECTION_MODEL=hog

# Camera Settings (optional)
# CAMERA_INDEX=0

# ==============================================
# NOTIFICATION SETTINGS
# ==============================================

# Enable/Disable Notifications
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false

# Email (SMTP) Configuration
# For Gmail: Enable "Less secure app access" or use App Password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SENDER_EMAIL=
SENDER_NAME=Smart Attendance System

# SMS (Twilio) Configuration
# Sign up at https://www.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Low Attendance Threshold (percentage)
LOW_ATTENDANCE_THRESHOLD=75.0
